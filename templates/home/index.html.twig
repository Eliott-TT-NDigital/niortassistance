<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Niort Assistant</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
</head>
<body>
    <!-- Bouton th√®me en haut √† droite -->
    <button class="theme-toggle-corner" onclick="toggleTheme()" aria-label="Changer de th√®me">
        <span class="theme-icon">üåô</span>
    </button>
    
    <!-- Bouton connexion en bas √† gauche -->
    <a href="/admin" class="login-btn" title="Se connecter">
        <span>üë§</span>
    </a>

    <!-- Bouton chatbot rond et compact √† droite en bas -->
    <button class="chatbot-btn-compact" onclick="openChatbot()" aria-label="Ouvrir le chatbot" title="Discuter avec l'assistant IA">
        <span class="chatbot-icon-compact">ü§ñ</span>
    </button>

    <div class="container">
        <header class="header">
            <div class="logo">
                <img src="{{ asset('images/niort-logo.png') }}" alt="Niort Assistant Logo">
            </div>
            <h1 class="title">Niort Assistant</h1>
            <p class="subtitle">Posez vos questions et obtenez des r√©ponses instantan√©es gr√¢ce √† votre assistant interactif intelligent.</p>
            
            <!-- BARRE DE RECHERCHE -->
            <div class="search-container">
                <div class="search-wrapper">
                    <span class="search-icon">üîç</span>
                    <input 
                        type="text" 
                        class="search-input" 
                        placeholder="Rechercher une question..."
                        autocomplete="off"
                        spellcheck="false"
                        id="searchInput"
                    >
                    <button class="search-clear" id="searchClear" title="Effacer la recherche">
                        ‚úï
                    </button>
                </div>
                <div class="search-results-info" id="searchResultsInfo"></div>
            </div>
            <!-- FIN BARRE DE RECHERCHE -->            
            <hr class="divider">
        </header>
        
        <main class="content">
            {% if categories|length > 0 %}
                {% for category in categories %}
                    <section class="category-section">
                        <h2 class="category-title">{{ category.name }}</h2>
                        
                        <div class="questions-grid">
                            {% if category.questions|length > 0 %}
                                {% for question in category.questions %}
                                    <div class="card fade-in" tabindex="0">
                                        <h3 class="question">{{ question.title }}</h3>
                                        <div class="answer">
                                            {{ question.content }}
                                        </div>
                                    </div>
                                {% endfor %}
                            {% else %}
                                <p class="no-questions">Aucune question dans cette cat√©gorie.</p>
                            {% endif %}
                        </div>
                    </section>
                {% endfor %}
            {% else %}
                <div class="no-categories">
                    <p>Aucune cat√©gorie trouv√©e.</p>
                </div>
            {% endif %}
        </main>
    </div>

    <!-- Le modal chatbot est maintenant cr√©√© dynamiquement via JavaScript -->
    
    <script src="{{ asset('js/script.js') }}"></script>
    
    <!-- Script pour masquer le bouton Chatbase par d√©faut -->
    <script>
        // Masquer le bouton Chatbase par d√©faut quand il appara√Æt
        function hideChatbaseButton() {
            const chatbaseButton = document.querySelector('#chatbase-bubble-button, [id*="chatbase"], [class*="chatbase-bubble"], .chatbase-bubble-button');
            if (chatbaseButton) {
                chatbaseButton.style.display = 'none';
                chatbaseButton.style.visibility = 'hidden';
                chatbaseButton.style.opacity = '0';
                chatbaseButton.style.pointerEvents = 'none';
            }
        }

        // Observer pour d√©tecter l'apparition du bouton Chatbase
        const observer = new MutationObserver(function(mutations) {
            mutations.forEach(function(mutation) {
                if (mutation.addedNodes.length) {
                    hideChatbaseButton();
                }
            });
        });

        // D√©marrer l'observation
        observer.observe(document.body, {
            childList: true,
            subtree: true
        });

        // Masquer imm√©diatement et v√©rifier p√©riodiquement
        setInterval(hideChatbaseButton, 500);
        
        // Masquer au chargement
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(hideChatbaseButton, 1000);
            setTimeout(hideChatbaseButton, 3000);
            setTimeout(hideChatbaseButton, 5000);
        });
    </script>

    <script>
        (function(){
            if(!window.chatbase || window.chatbase("getState")!=="initialized"){
                window.chatbase=(...args)=>{(window.chatbase.q=window.chatbase.q||[]).push(args)};
            }
            const onLoad=function(){
                const script=document.createElement("script");
                script.src="https://www.chatbase.co/embed.min.js";
                script.id="6knjac3THVFxv9czJZUqt";
                script.domain="www.chatbase.co";
                document.body.appendChild(script);
                
                // Masquer le bouton apr√®s le chargement du script
                setTimeout(hideChatbaseButton, 1000);
            };
            document.readyState==="complete" ? onLoad() : window.addEventListener("load", onLoad);
        })();
    </script>
</body>
</html>